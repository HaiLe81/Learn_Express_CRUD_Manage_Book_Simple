extends ../layout/layout.pug

block cdn-bootstrap
  if errors
    each error in errors
      .alert.alert-danger= error
  h1 Edit User

  form(action=`/users/edit/${id}`, method="POST")
    div.form-group
      label Name
      input(class="form-control", type="text", name="name", value= user?user.name:'')
      button.btn.btn-primary.mt-2 Save